<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/warnings_list_individual_view_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="8 AM" />

    <TextView
        android:id="@+id/warnings_list_individual_view_separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:text="-"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/warnings_list_individual_view_time"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/warnings_list_individual_view_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/warnings_list_individual_view_separator"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Swell" />

</android.support.constraint.ConstraintLayout>